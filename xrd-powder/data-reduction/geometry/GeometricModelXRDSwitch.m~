function GeometricModelXRDSwitch(instr, polimg)

centers     = instr.centers./1000;
distance    = instr.distance;
gammaX      = instr.gammaX;
gammaY      = instr.gammaY;
detpars     = instr.detpars;
dettype     = instr.dettype;

radius      = Pixel2mm(polimg.radius', instr.pixelsize);
azimuth     = polimg.azimuth;

method = 'Bilinear';

switch lower(dettype)
    case {'0','bilinear'}
        disp('Method is linear')
    case 'cubic'
        disp('Method is cubic')
    case 'nearest'
        disp('Method is nearest')
    otherwise
        disp('Unknown method.')
end
